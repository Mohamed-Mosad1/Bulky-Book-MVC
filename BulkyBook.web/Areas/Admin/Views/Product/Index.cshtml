@model IReadOnlyList<ProductVM>

@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row text-end mb-4 justify-content-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary w-auto">
                <i class="bi bi-plus-circle me-2"></i>  Create New Product
            </a>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped table-hover py-4">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>List Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}