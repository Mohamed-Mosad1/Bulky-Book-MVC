@model IReadOnlyList<ProductVM>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3 g-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
            <div class="card border-0 p-2 shadow-sm h-100">
                @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                {
                    <img src="@product.ProductImages.FirstOrDefault()?.ImageUrl" class="card-img-top rounded" alt="@product.Title" />
                }
                else
                {
                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" alt="Placeholder" />
                }

                <div class="card-body d-flex flex-column justify-content-end">
                    <h5 class="card-title text-dark text-uppercase text-center">@product.Title</h5>
                    <p class="card-subtitle mb-2 text-warning text-center">by <b>@product.Author</b></p>
                    <p class="text-dark text-center mb-1">
                        List Price:
                        <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                    </p>
                    <p class="text-dark text-center">
                        As low as:
                        <span>@product.Price100.ToString("c")</span>
                    </p>
                    <a asp-action="Details" asp-route-productId="@product.Id"
                       class="btn btn-primary bg-gradient border-0 w-100 mt-3">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
