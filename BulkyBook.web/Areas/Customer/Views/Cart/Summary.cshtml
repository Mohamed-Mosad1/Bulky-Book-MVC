@model ShoppingCartVM

<div class="card shadow border-0">

    <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-6">
                <h5 class="pt-2 text-white">
                    Order Summary
                </h5>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Index" class="btn btn-outline-danger btn-sm">Back to Cart</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-lg-5 offset-lg-1">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-info">Order Summary:</span>
                </h4>
                <ul class="list-group mb-3">
                    @foreach (var item in Model.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div>
                                <h5 class="fw-bold">@item.ProductTitle</h5>
                                <p><small>@Html.Raw(item.ProductDescription?.Split(' ').Take(10).Aggregate((s1, s2) => s1 + " " + s2))</small></p>
                                <h6 class="fw-bold">Quantity: @item.Quantity</h6>
                            </div>
                            <span class="text-muted">@((item.ProductPrice * item.Quantity).ToString("c"))</span>
                        </li>
                    }

                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <h5 class="text-info fw-bolder">Total (USD)</h5>
                        <strong class="text-info fw-bolder">@Model.TotalPrice.ToString("c")</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row pb-3">
            <div class="col-12 col-md-8 pt-2">
                <p style="color:maroon; font-size:14px;">
                    Estimate Arrival Date:
                    @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                </p>
            </div>
            <div class="col-12 col-md-4">
                <a asp-action="PlaceOrder" value="Checkout" class="btn btn-primary border-0 bg-gradient w-100 py-2">Checkout</a>
            </div>
        </div>
    </div>
</div>

